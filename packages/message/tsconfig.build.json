{
  "extends": "./tsconfig.json",
  "compilerOptions": {
		"noEmit": false,
		"allowJs": true,
		"declarationMap": false,
    "declaration": true,
    "emitDeclarationOnly": true,
		"outDir": "types",
    "target": "ESNext"
  },
  "exclude": [
    "packages/*/__tests__",
    "packages/runtime-test",
    "packages/template-explorer",
    "packages/sfc-playground",
    "packages/size-check",
    "packages/dts-test"
  ]
}
