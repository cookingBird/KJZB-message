{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.0.0",
  "packages": [
    "packages/*",
    "example/*"
  ],
  "npmClient": "pnpm",
  "command": {
    "version": {
      "allowBranch": "master"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock",
        "--strict-peer-dependencies",
        "--ignore-scripts"
      ]
    }
  }
}
